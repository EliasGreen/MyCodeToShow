package ru.Illadia.Elias;

import javax.swing.JFrame;
import javax.swing.JLabel;

public class Window extends JFrame {
	
	public static JLabel lblWeather;

	public Window(){
		
		//Стандартный набор
				setResizable(false);
				setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				setLocationRelativeTo(null);
				setSize(400, 200);
				getContentPane().setLayout(null);
				
				
				// Текстовый лэйбл с погодой в Краснодаре
				lblWeather = new JLabel("Weather");
				lblWeather.setBounds(120, 71, 161, 27);
				getContentPane().add(lblWeather);
				
				
				
				//Видимость :
				setVisible(true);
	}
}
